<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-autowire="byName" default-lazy-init="false">


	<!-- Struts Actions -->
	<bean name="/CreateEmployeeList" class="org.tb.web.action.CreateEmployeeListAction" />
	<bean name="/LoginEmployee" class="org.tb.web.action.LoginEmployeeAction" />
	<bean name="/LogoutEmployee" class="org.tb.web.action.LogoutEmployeeAction" />
	<bean name="/CreateDailyReport" class="org.tb.web.action.CreateDailyReportAction" />
	<bean name="/StoreDailyReport" class="org.tb.web.action.StoreDailyReportAction" />


	<!-- Struts Admin Actions -->
	<bean name="/AddEmployee" class="org.tb.web.action.admin.AddEmployeeAction" />
	<bean name="/CreateAdminList" class="org.tb.web.action.admin.CreateAdminListAction" />
	<bean name="/GenerateMultipleEmployeeorders" class="org.tb.web.action.admin.GenerateMultipleEmployeeordersAction"/>

	<!-- Data Access Objects -->
	<bean name="employeeDAO" class="org.tb.persistence.EmployeeDAO">
		<property name="adminNames">
			<list>
				<value>oda</value>
				<value>mm</value>
			</list>
		</property>
	</bean>
	<bean name="customerDAO" class="org.tb.persistence.CustomerDAO">
	</bean>
	<bean name="customerorderDAO" class="org.tb.persistence.CustomerorderDAO">
	</bean>
	<bean name="projectIDDAO" class="org.tb.persistence.ProjectIDDAO">
	</bean>
	<bean name="suborderDAO" class="org.tb.persistence.SuborderDAO">
	</bean>
	<bean name="ticketDAO" class="org.tb.persistence.TicketDAO">
	</bean>
	<bean name="worklogDAO" class="org.tb.persistence.WorklogDAO">
	</bean>
	<bean name="invoiceDAO" class="org.tb.persistence.InvoiceDAO">
	</bean>
	<bean name="employeecontractDAO" class="org.tb.persistence.EmployeecontractDAO">
	</bean>
	<bean name="employeeorderDAO" class="org.tb.persistence.EmployeeorderDAO">
	</bean>
	<bean name="timereportDAO" class="org.tb.persistence.TimereportDAO">
	</bean>
	<bean name="referencedayDAO" class="org.tb.persistence.ReferencedayDAO">
	</bean>
	<bean name="trainingDAO" class="org.tb.persistence.TrainingDAO"	>
	</bean>

	
	<!-- Business Logic -->
	
	<!-- Hibernate Konfiguration -->
	<bean name="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="myDataSource" />
		<property name="configurationClass">
			<value>org.hibernate.cfg.AnnotationConfiguration</value>
		</property>
		<property name="configLocation">
			<value>/WEB-INF/hibernate.cfg.xml</value>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">none</prop>
				<prop key="hibernate.current_session_context_class">org.hibernate.context.ThreadLocalSessionContext</prop>
				<prop key="hibernate.cache.use_second_level_cache">true</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop>
			</props>
		</property>
	</bean>

	<!-- DataSource -->
	<bean name="myDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" depends-on="hsqlDriver">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:hsql://localhost/taetigkeitsberichte" />
		<property name="username" value="sa" />
		<property name="password" value="" />
	</bean>
	
	<!-- JDBC Treiber der HSQL Datenbank -->
	<bean name="hsqlDriver" class="org.hsqldb.jdbcDriver" depends-on="hsqlDatabase" />

	<!-- HSQL Datenbank Instanz -->
	<bean name="hsqlDatabase" class="org.tb.util.HsqlDbWrapper" init-method="start" destroy-method="stop">
		<property name="path">
			<value>file:d:/temp/hsqldb/taetigkeitsberichte</value>
		</property>
		<property name="name">
			<value>taetigkeitsberichte</value>
		</property>
	</bean>

</beans>